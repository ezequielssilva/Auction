@model Auction.Core.Models.Product

@{
    ViewData["Title"] = "Cadastro de Produtos";
}

<div class="row">
    <div class="col-4 offset-4">
        <div class="card">
            <h5 class="card-header text-center">@ViewData["Title"]</h5>
            <div class="card-body">
                <form asp-action="Create" method="post" class="text-center">
                    <div class="row form-group">
                        <div class="col-12">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control form-control-sm text-center" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12">
                            <label asp-for="Value"></label>
                            <input asp-for="Value" class="form-control form-control-sm text-center money" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-12">
                            <button type="submit" class="btn btn-sm btn-success btn-block">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
